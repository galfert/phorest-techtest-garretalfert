{{#if @clients}}
  <div class="overflow-x-auto">
    <table class="table w-full" data-test-client-list>
      <thead>
        <tr>
          <th>Name</th>
          <th>Phone</th>
          <th>Email</th>
          <th>Notes</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each @clients as |client|}}
          <tr>
            <td>
              <div class="flex items-center space-x-3">
                  <div class="avatar">
                    <div class="w-12 h-12 mask mask-squircle">
                      {{#if client.photoUrl}}
                        <img src={{client.photoUrl}} alt="Portrait of {{client.fullName}}">
                      {{/if}}
                    </div>
                  </div>
                <div>
                  <div class="font-bold">
                    {{client.fullName}}
                  </div>
                  <div class="text-sm opacity-50">
                    {{client.formattedBirthDate}}
                  </div>
                </div>
              </div>
            </td>
            <td data-test-phone>{{client.mobile}}</td>
            <td data-test-email>{{client.email}}</td>
            <td class="break-normal">{{client.notes}}</td>
            <td>
              <button class="btn btn-outline btn-primary btn-xs" type="button"
                {{on "click" (fn @onSelect client)}} data-test-new-voucher>New Voucher</button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{/if}}
