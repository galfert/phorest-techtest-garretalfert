{{#if @clients}}
  <div class="overflow-x-auto">
    <table class="table w-full">
      <thead>
        <tr>
          <th>Name</th>
          <th>Phone</th>
          <th>Email</th>
          <th>Notes</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each @clients as |client|}}
          <tr>
            <td>
              <div class="flex items-center space-x-3">
                <div class="avatar">
                  <div class="w-12 h-12 mask mask-squircle">
                    <img src={{client.photoUrl}} alt="Portrait of {{client.fullName}}">
                  </div>
                </div>
                <div>
                  <div class="font-bold">
                    {{client.fullName}}
                  </div>
                  <div class="text-sm opacity-50">
                    {{client.formattedBirthDate}}
                  </div>
                </div>
              </div>
            </td>
            <td>{{client.mobile}}</td>
            <td>{{client.email}}</td>
            <td class="break-normal">{{client.notes}}</td>
            <td>
              <button class="btn btn-ghost btn-xs" type="button"
                {{on "click" (fn @onSelect client)}}>Voucher</button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{/if}}
